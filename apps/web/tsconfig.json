/// <reference types="nativewind/types" />

{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "target": "es5",
    "moduleResolution": "node",
    "paths": {
      "@linguin-shared/*": [
        "../../packages/linguin-shared/*"
      ],
      "components/*": [
        "src/components/*",
        "../../packages/linguin-shared/components/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "public/*": [
        "public/*"
      ],
      "context/*": [
        "src/context/*",
        "../../packages/linguin-shared/context/*"
      ],
      "model/*": [
        "src/model/*",
        "../../packages/linguin-shared/model/*"
      ],
      "types/*": [
        "src/types/*",
        "../../packages/linguin-shared/types/*"
      ],
      "styles/*": [
        "src/styles/*"
      ],
      "util/*": [
        "src/util/*",
        "../../packages/linguin-shared/util/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts*",
    "src/types/language.ts",
    ".next/types/**/*.ts", "../../packages/linguin-shared/components/story/StoryQuestion.tsx", "../../packages/linguin-shared/components/story/StoryQuestionsSection.tsx", "../../packages/linguin-shared/components/story/Story.tsx" ],
  "extends": "@tsconfig/next/tsconfig.json"
}
